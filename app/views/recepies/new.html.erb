<h1> Create a New Recepie</h1>

<% if @recepie.errors.any? %>
  <div class = "row">
    <div class = "col-md-8 col-md-offset-2">
      <h3> Please correct the following errors </h3>
      <ul><% @recepie.errors.full_messages.each do |errors| %> 
        <li><%= errors %></li>
      <% end %>
      </ul>
        
    </div>
  </div>
  <% end %>
<div class = "row">
  <div class = "well col-md-8 col-md-offset-2">
    <%= form_for @recepie do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :summary %>
      <%= f.text_field :summary %>
      
      <%= f.label :description %>
      <%= f.text_area :description, rows: "10" %>
      
      <%= f.submit "Create Recepie" , class: "btn btn-success" %>
    <% end %>
      
  </div>
</div>