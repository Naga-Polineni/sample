<div class = "row">
  <div class = "well col-md-8 col-md-offset-2">
    <%= form_for(@recepie, html: { multipart: true }) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :summary %>
      <%= f.text_field :summary %>
      
      <%= f.label :description %>
      <%= f.text_area :description, rows: "10" %>
      
      <span class = "picture"><%= f.file_field :picture , accept: 'image/jpeg,image/png,image/gif' %></span>
      
      <%= f.submit(@recepie.new_record? ? "New Recepie" : "Edit Recepie" , class: "btn btn-success") %>
    <% end %>
      
  </div>
</div>