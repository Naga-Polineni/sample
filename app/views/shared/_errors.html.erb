<% if obj.errors.any? %>
  <div class = "row">
    <div class = "col-md-8 col-md-offset-2">
      <h3> Please correct the following errors </h3>
      <ul><% obj.errors.full_messages.each do |errors| %> 
        <li><%= errors %></li>
      <% end %>
      </ul>
        
    </div>
  </div>
<% end %>